# Ptolemies Environment Configuration
# Copy this file to .env and fill in your values

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GITHUB_PAT=your_github_personal_access_token_here

# Logfire Configuration
LOGFIRE_TOKEN=your_logfire_token_here
LOGFIRE_PROJECT_NAME=ptolemies
LOGFIRE_SERVICE_NAME=ptolemies-api

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=ptolemies

# SurrealDB Configuration
SURREALDB_URL=ws://localhost:8000/rpc
SURREALDB_USERNAME=root
SURREALDB_PASSWORD=root
SURREALDB_NAMESPACE=ptolemies
SURREALDB_DATABASE=knowledge

# Redis Configuration
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# TaskMaster AI Configuration
MODEL=claude-3-7-sonnet-20250219
MAX_TOKENS=64000
TEMPERATURE=0.2
DEFAULT_SUBTASKS=5
DEFAULT_PRIORITY=medium

# Application Settings
DEBUG=false
LOG_LEVEL=info
PYTHONPATH=/Users/dionedge/devqai:$PYTHONPATH
DEVQAI_ROOT=/Users/dionedge/devqai

# Crawler Settings
CRAWLER_MAX_DEPTH=2
CRAWLER_MAX_PAGES=250
CRAWLER_DELAY_MS=1000
CRAWLER_USER_AGENT="Ptolemies Knowledge Crawler/1.0"

# Embedding Settings
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=1536
EMBEDDING_BATCH_SIZE=100